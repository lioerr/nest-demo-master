                            <li>  商品类型说明: 
                              <textarea name="description" id="" cols="60" rows="8">
                                <%= goodsTypeData.description %>
                              </textarea>
                            </li>
                            
                            <li>
                                <br/>
                                <button type="submit" class="btn btn-primary">提交</button>
                            </li>

                        </ul>

                    </form>
                
                </div>
            </div>
        </div>
    </div>
</div>

