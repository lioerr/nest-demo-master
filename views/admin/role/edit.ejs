<%- include ('../public/page_header.ejs') %>

  <div class="container-fluid">
    <div class="row">

      <div class="col-sm-10">

        <div class="panel panel-default">
          <div class="panel-heading">
            增加修改角色
          </div>
          <div class="panel-body">
            <div class="table-responsive input-form">
              <form action="/<%= config.adminPath %>/role/doEdit" method="post">
                <ul>
                  <li> 角色名称: <input type="text" name="title" value="<%=roleData.title%>"/></li>
  
                  <li>
                    角色描述:
                    <textarea name="description" id=""  cols="60" rows="8">
                      <%= roleData.description %>
                    </textarea>
                  </li>
  
                  <li>
                    <input type="hidden" name="_id" value="<%= roleData._id %>">
                    <br />
                    <button type="submit" class="btn btn-default">提交</button>
                  </li>

                </ul>
              </form>
            </div>
          </div>


        </div>

      </div>
    </div>
  </div>

  </body>

  </html>